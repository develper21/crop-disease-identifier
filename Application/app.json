{
  "expo": {
    "name": "Crop Disease Identifier",
    "slug": "crop-disease-identifier",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cropdisease",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cropdisease.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to capture plant photos for disease detection.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to select plant images for disease detection."
      }
    },
    "android": {
      "package": "com.cropdisease.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#2E7D32"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow app to access your camera to capture plant photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
